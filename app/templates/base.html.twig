
{% include "header.html.twig" %}

<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ 'serwis_ogloszeniowy'|trans }}{% endblock %}</title>
    <meta name="author" content="Marta Stachura">
    {#<link rel="stylesheet"href="../../web/css/bootstrap.css">#}
    {% block stylesheets %}
        <!-- Bootstrap -->
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">
        <link href="{{ asset('css/main.css') }}" rel="stylesheet">
    {% endblock %}
    {#<link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">#}


</head>
<body>
{% include 'default/_flash_messages.html.twig' %}


{% if is_granted('IS_AUTHENTICATED_FULLY' ) %}

    {{ 'zalogowany_jako'|trans }}:
    <a href="{{ url ('user_view', {'id': loggedUser.id}) }}">
        {{ loggedUser.login }}
    </a>
{% endif %}

<nav class="navbar navbar-default container-fluid">
    {% include 'menu.html.twig' %}
    <div class="container-fluid">
        <div class="btn-group pull-right" role="group" aria-label="{{ 'label.actions'|trans }}">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="btn btn-default" href="{{ url('auth_logout') }}" title="{{ 'auth.logout.label'|trans }}">
                    <button class="btn btn-info">
                        {{ 'auth.logout.label'|trans }}
                    </button>
                </a>
            {% else %}
                <a class="btn btn-default" href="{{ url('auth_login') }}" title="{{ 'auth.login.label'|trans }}">
                    <button class="btn btn-info">
                        {{ 'auth.login.label'|trans }}
                    </button>
                </a>

                <a href="{{ url ('user_registration') }}">
                    <button class="btn btn-info">{{ 'zarejestruj'|trans }}</button>
                </a>

            {% endif %}
        </div>
    </div>
</nav>



{% block body %}
    <header> {% block header %}{% endblock %} </header>
    {% block content %}Page will be soon.{% endblock %}


    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('js/scripts.js') }}"></script>
{% endblock %}

{% block javascripts %}

    {#<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->#}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
            integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS"
            crossorigin="anonymous"></script>




{% endblock %}

{% block footer %}
    <footer id="stopka">System interakcyjny - projekt</footer>
{% endblock %}

</body>


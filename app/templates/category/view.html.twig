{% extends 'base.html.twig' %}

{% block title %}{{ 'wyszukiwarka'|trans }}{% endblock %}

{% block body %}

    <div class="col-md-3">
        <a href="{{ global.request.headers.get('referer') }}" title="{{ 'label.back'|trans }}" class="btn btn-default">
            <span class="fa fa-mail-reply" aria-hidden="true"></span>
            <i class="glyphicon glyphicon-arrow-left"></i>
            <span aria-hidden="true">&larr;</span>{{ 'label.back'|trans }}
        </a>
    </div>

    <h1>{{ 'ogloszenia_kategorii'|trans }}: {{ name_category }}</h1>


    {% for advertisement in advertisements.data %}

        <a href="{{ url ('ads_view', {'id': advertisement.id}) }}">
            {{ advertisement.name }}
        </a>

    {% endfor %}

    {% include 'default/_paginator_category_view.html.twig' with {
        paginator: advertisements,
        route_name: 'category_view',
    } %}

{% endblock %}
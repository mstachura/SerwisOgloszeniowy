{% extends 'base.html.twig' %}

{% block title %}{{ 'usun_komentarz'|trans({'%id%': comment.id}) }}{% endblock %}

{% block body %}
    <h1>{{ 'usun_komentarz'|trans({'%id%': comment.id}) }}</h1>
    {{ comment.text }}
    {{ form_start(form, { method: 'post', action: url('comment_delete', {'id': comment.id}) }) }}
    {{ form_widget(form) }}
    <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-success" />
    {{ form_end(form) }}
    <a href="{{ url('ads_index') }}" title="{{ 'label.back_to_list'|trans }}" class="btn btn-default">
        <span class="fa fa-mail-reply" aria-hidden="true"></span>
        {{ 'label.back_to_list'|trans }}
    </a>
{% endblock %}
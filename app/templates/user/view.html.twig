            <p>{{ advertisement.name}}</p>
            {#<img src='' alt="{{ advertisement.photo }}">#}
        </a>
        </ol>
    {% endfor %}
</div>

    <H1>{{ "dodaj_ogloszenie" |trans}}</H1>
    <a href ="{{ url ('ads_add') }}">
        <button class="btn btn-success">
            {{ "dodaj_ogloszenie" |trans}}
        </button>
    </a>

    <H2>{{ "edytuj_uzytkownika" |trans}}</H2>
    <a href ="{{ url ('user_edit', {'id': user.id}) }}">
        <button class="btn btn-warning">
            {{ "edytuj_uzytkownika" |trans}}
        </button>
    </a>


    <H2>{{ "usun_uzytkownika" |trans}}</H2>
    <a href ="{{ url ('user_delete', {'id': user.id}) }}">

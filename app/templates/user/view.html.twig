{% extends 'base.html.twig' %}
{% block title %}
    Profil użytkownika - {{ user.id }}
{% endblock %}

{% block content %}

    <div class="col-md-3">
        <a href="{{ global.request.headers.get('referer') }}" title="{{ 'label.back'|trans }}" class="btn btn-default">
            <span class="fa fa-mail-reply" aria-hidden="true"></span>
            <i class="glyphicon glyphicon-arrow-left"></i>
            {{ 'label.back'|trans }}
        </a>
    </div>

    <H1>{{ "dane_autora_ogloszenia" |trans}}</H1>
    <p>{{ "label.login" |trans}}: {{ user.login}}</p>
    <p>{{ "label.email" |trans}}: {{ user.email}}</p>
    <p>{{ "label.firstname" |trans}}: {{ userData.firstname}}</p>
    <p>{{ "label.lastname" |trans}}: {{ userData.lastname}}</p>
    <p>{{ "label.phone_number" |trans}}: {{ userData.phone_number}}</p>

<div class="ad">
    <H1>{{ "lista_ogloszen" |trans}}</H1>

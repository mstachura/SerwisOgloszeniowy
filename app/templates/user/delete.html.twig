{% extends 'base.html.twig' %}

{% block title %}{{ 'usun_uzytkownika'|trans({'%id%': user.id}) }}{% endblock %}

{% block body %}
    <h1>{{ 'usun_uzytkownika'|trans({'%id%': user.id}) }}</h1>
    {{ form_start(form, { method: 'post', action: url('user_delete', {'id': user.id}) }) }}
    {{ form_widget(form) }}
    <input type="submit" value="{{ 'action.delete'|trans }}" class="btn btn-danger" />
    {{ form_end(form) }}


{% endblock %}